                    @if (todayMenu != null)
                    {
                        <div>
                            <p class="font-medium text-slate-800 dark:text-slate-100 text-base">@CalendarService.CleanupTitle(todayMenu.MainDish)</p>
                            @if (!string.IsNullOrEmpty(todayMenu.Details))
                            {
