@page "/"
@using Meyers.Web.Services
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Meyers Menu Calendar</PageTitle>

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-3xl font-bold text-meyers-green mb-6">Welcome to Meyers Menu Calendar</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
            <!-- Calendar Feed Section -->
            <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">üìÖ Calendar Feed URLs</h3>
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">iCal Feed URL:</label>
                        <div class="flex">
                            <input type="text" 
                                   value="@GetCalendarUrl()" 
                                   readonly 
                                   class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-white text-sm" />
                            <button onclick="copyToClipboard('@GetCalendarUrl()')" 
                                    class="bg-meyers-green text-white px-4 py-2 rounded-r-md hover:bg-opacity-90 transition-colors">
                                Copy
                            </button>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Alternative URL (.ics):</label>
                        <div class="flex">
                            <input type="text" 
                                   value="@GetCalendarIcsUrl()" 
                                   readonly 
                                   class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-white text-sm" />
                            <button onclick="copyToClipboard('@GetCalendarIcsUrl()')" 
                                    class="bg-meyers-green text-white px-4 py-2 rounded-r-md hover:bg-opacity-90 transition-colors">
                                Copy
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="mt-6 p-4 bg-blue-50 rounded-md">
                    <h4 class="font-medium text-blue-800 mb-2">How to add to your calendar:</h4>
                    <ul class="text-sm text-blue-700 space-y-1">
                        <li><strong>Google Calendar:</strong> Settings ‚Üí Add calendar ‚Üí From URL</li>
                        <li><strong>Outlook:</strong> Add calendar ‚Üí Subscribe from web</li>
                        <li><strong>Apple Calendar:</strong> File ‚Üí New Calendar Subscription</li>
                    </ul>
                </div>
            </div>
            
            <!-- Menu Preview Section -->
            <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">üçΩÔ∏è Menu Preview</h3>
                
                <div class="space-y-4">
                    <div class="bg-white rounded-md p-4 border">
                        <h4 class="font-semibold text-meyers-green mb-2">Today's Menu</h4>
                        <p class="text-gray-600 text-sm">Loading today's menu...</p>
                    </div>
                    
                    <div class="bg-white rounded-md p-4 border">
                        <h4 class="font-semibold text-meyers-green mb-2">Tomorrow's Menu</h4>
                        <p class="text-gray-600 text-sm">Loading tomorrow's menu...</p>
                    </div>
                </div>
                
                <div class="mt-6 p-4 bg-green-50 rounded-md">
                    <h4 class="font-medium text-green-800 mb-2">Features:</h4>
                    <ul class="text-sm text-green-700 space-y-1">
                        <li>‚Ä¢ Automatic daily menu updates</li>
                        <li>‚Ä¢ Clean calendar event titles</li>
                        <li>‚Ä¢ Detailed descriptions with full menu</li>
                        <li>‚Ä¢ Copenhagen timezone support</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(function() {
            // Could add a toast notification here
            console.log('Copied to clipboard: ' + text);
        });
    }
</script>

@code {
    private string GetCalendarUrl()
    {
        var request = HttpContextAccessor?.HttpContext?.Request;
        if (request == null) return "/calendar";
        return $"{request.Scheme}://{request.Host}/calendar";
    }
    
    private string GetCalendarIcsUrl()
    {
        var request = HttpContextAccessor?.HttpContext?.Request;
        if (request == null) return "/calendar.ics";
        return $"{request.Scheme}://{request.Host}/calendar.ics";
    }
}